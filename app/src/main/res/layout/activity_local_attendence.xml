<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalAttendence">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/local_parent_ll"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/meal_type"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha=".4"
            android:background="@android:color/black"
            ></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:text="Type Your Register Number"
            android:textSize="28dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/register_no"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/local_edit_text"
            android:padding="12dp"
            android:hint="Type here"
            android:textColor="@android:color/white"
            android:maxLength="3"
            android:inputType="number"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textSize="50dp"
            android:background="@android:color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="OK"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:typeface="monospace"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/set_text_on_local_page"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textSize="24dp"

            android:id="@+id/set_text2_on_local_page"/>
    </LinearLayout>


</ScrollView>